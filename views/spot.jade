html(lang='en')
  head(prefix='og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# fbtaggr: http://ogp.me/ns/fb/fbtaggr#')
    meta(property='fb:app_id', content='162309810576217')
    meta(property='og:type', content='fbtaggr:spot')
    meta(property='og:title', content='#{spot_name}')
    meta(property='og:image', content='#{spot_image}')
    meta(property='place:location:latitude', content='42.293675')
    meta(property='place:location:longitude', content='-71.263289')
    title= spot_name

  body
    h1 Have you tagged into #{spot_name} lately?
    img(src='#{spot_image}')
    fb:activity(actions='fbtaggr:tag')