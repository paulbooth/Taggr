html(lang='en')
  head
    title Taggr
    script(src='http://localhost:8080/socket.io/socket.io.js')
    script(src='jquery.js')
    script(src='taggr-client.js')
    link(rel='stylesheet', href='/default.css')
  body
    div(id='spot_name_div')
      h1(id='spot_name') Trying to connect to local spot...
    div(id='spot_image_div')
    div Get ready to tag, #{name}!  
      a(href='/logout') Logout
    - if(uids.length)
      h2 You have an active taggr. Tag in!
    - else
      h2 You don't have a taggr associated with your account. Please Tap a taggr to activate it.
    br
    div(id='connect_tag_div')
      - if(uids.length)
        a(id='connect_tag')
      - else
        h1
          a(id='connect_tag') Tap a Taggr
    - if (uids.length)
      h3 Activated Keys:
      ul(id='uids')
        - uids.forEach(function(uid){
          li
            #{uid.uid}
        - })